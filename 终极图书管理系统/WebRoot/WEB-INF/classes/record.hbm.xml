<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
<class name="my.lc.library.librarys.Record" table="tb_record">
<!-- 联合主键 -->
<composite-id >  
<key-property name="name" column="name"  type="java.lang.String"></key-property>  
<key-property name="bookname" column="rb_name" type="java.lang.String"></key-property>  
</composite-id>
<!-- 普通属性 -->

<property name="LendDate" column="LendDate" type="java.lang.String"></property>
<property name="SendDate" column="SendDate" type="java.lang.String"></property>
</class>
</hibernate-mapping>