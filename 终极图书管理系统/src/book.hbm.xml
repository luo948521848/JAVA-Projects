<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
<class name="my.lc.library.librarys.book" table="tb_book">
<!-- 主键 -->
<id name="bookname" column="bookname" type="java.lang.String">
<!-- 固定值：主键生成策略 -->

</id>
<!-- 普通属性 -->
<property name="writer" column="writer" type="java.lang.String"></property>
<property name="num" column="num" type="java.lang.Integer"></property>
<property name="publish" column="publish" type="java.lang.String"></property>
<property name="writedate" column="writedate" type="java.lang.String"></property>
</class>
</hibernate-mapping>