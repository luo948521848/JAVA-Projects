<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
<class name="LIbrarys.book" table="tb_book">
<!-- 主键 -->
<id name="b_name" column="b_name" type="java.lang.String">
<!-- 固定值：主键生成策略 -->

</id>
<!-- 普通属性 -->

<property name="b_writer" column="b_writer" type="java.lang.String"></property>
<property name="b_num" column="b_num" type="java.lang.Integer"></property>
<property name="b_publish" column="b_publish" type="java.lang.String"></property>
<property name="br_date" column="br_date" type="java.lang.String"></property>
</class>
</hibernate-mapping>